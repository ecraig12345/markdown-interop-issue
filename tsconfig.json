{
  "compilerOptions": {
    // these are the important options for the repro
    "esModuleInterop": false, // default
    "allowSyntheticDefaultImports": false, // implied by esModuleInterop: false
    "skipLibCheck": false, // default

    // other options as desired
    "outDir": "lib",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "jsx": "react",
    "types": ["jest"]
  },
  "include": ["src"]
}
